&[data-is-feed]
  max-width 640px
  height 610px

  & ^[0]__answers
    max-width calc(100% - 20px)
    border-radius 30px 30px 0 0

    box-shadow 0px -1px 10px rgba(#000, .1)

    &--phrase
      left 10px
      font-size .85em

    &--theme-switcher
      right 15px
      font-size .7em

      span
        transform scale(.45)
        width 20px

  // сброс значений для маленьких экранов
  &[max-width~='374px']
    height 530px

    & ^[0]__answers
      max-width 100%
      border-radius 0

      &--theme-switcher
        font-size .8em

        span
          transform scale(.7)
          width 46px
