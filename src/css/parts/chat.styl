&__chat
  height calc(100% - 215px)

  padding 0 15px 0 10px

  background-image var(--mggn__img-chat_bg_x1)
  background-size cover

  background-color var(--mgtn__chat-bg-color)

  transition var(--mgfn__switch-theme-transilion)

  overflow hidden

  scroll-behavior smooth

  overflow-y scroll
  overflow-x hidden

  &-header
    background-color var(--mgfn__header-bg-color)

    position relative

    color var(--mgfn__header-text-color)

    transition var(--mgfn__switch-theme-transilion)

    cursor default
    user-select none

    & > *
      position absolute

    &--counter, &--operator
      top 7px

      line-height 1.3
      font-size .5em

    &--counter
      left 40px

    &--operator
      right 25px

    &--sender
      bottom 15px
      right 0; left 0

      font-size .85em

      text-align center
      line-height 1

    &--avatar
      right 15px; bottom 10px

      width 30px; height 30px

      background-image var(--mggn__img-anon_x1)
      background-size cover
