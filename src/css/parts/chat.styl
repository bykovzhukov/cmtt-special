&__chat
  height calc(100% - 215px)
  padding 0 15px 0 10px

  position relative

  background-image var(--mggn__img-chat_bg_x1)
  background-color var(--mgtn__chat-bg-color)

  background-size cover

  transition var(--mgfn__switch-theme-transilion)

  overflow-y scroll
  overflow-x hidden

  scroll-behavior smooth

  &--bottom
    height 20px

  &-header
    background-color var(--mgfn__header-bg-color)
    border-radius 30px 30px 0 0

    position relative

    color var(--mgfn__header-text-color)

    transition var(--mgfn__switch-theme-transilion)

    cursor default
    user-select none

    & > *
      position absolute

    &--counter, &--operator
      top 7px

      line-height 1.3
      font-size .6em

    &--counter
      left 30px

    &--operator
      right 15px

    &--sender
      bottom 13px
      right 0; left 0

      font-size .9em

      text-align center
      line-height 1

